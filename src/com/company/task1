create table gender(
id integer primary key,
gender varchar(6)unique not null);
select * from gender;

insert into gender (id,gender)values (1,'man');
insert into gender (id,gender)values (2,'woman');

create table Visitor(
id integer primary key,
FIO varchar(50) not null ,
birthdate varchar (15) not null,
gender integer references gender(id));

insert into visitor(id,FIO,birthdate,gender)
values (1,'Tom','12.03',1);
insert into visitor(id,FIO,birthdate,gender)
values (2,'Tomiris','12.05',2);
insert into visitor(id,FIO,birthdate,gender)
values (3,'Bill','18.03',1);

create table visit (
visitor integer references visitor(id) ,
timeOfVisit varchar(20)not null,
trainer integer references trainers(id)
);

insert into visit(visitor,timeOfVisit,trainer)
values (1,'12.30',1);
insert into visit(visitor,timeOfVisit,trainer)
values (2,'13.30',3);
insert into visit(visitor,timeOfVisit,trainer)
values (3,'14.30',2);
insert into visit(visitor,timeOfVisit,trainer)
values (3,'15.30',1);
insert into visit(visitor,timeOfVisit,trainer)
values (2,'16.30',5);

select visitor.fio,timeofvisit,trainers."name" from visit v2
join visitor on v2.visitor=visitor.id
join trainers on v2.trainer = trainers.id
order by timeofvisit desc;